{
    "compilerOptions": {
        "target": "ES2019",
        "module": "commonjs",
        "lib": [
            "esnext",
            "dom",
            "dom.iterable"
        ],
        "strict": true,
        "noImplicitAny": false,
        "esModuleInterop": true,
        "resolveJsonModule": true
    },
    "include": [
        "tests/**/*.ts",
        "utils/**/*.ts",
        "components/**/*.ts",
        "constant/**/*.json",
        "playwright.config.ts"
    ],
    "exclude": [
        "node_modules"
    ]
}